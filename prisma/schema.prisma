generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id             String   @id @default(uuid())
  nome           String
  CPF            String   @unique
  sexo           String
  dataNascimento DateTime
  estadoCivil    String
  email          String   @unique
  senha          String
  deleted        Boolean  @default(false)
  consultas      Consulta[]
  exames         Exame[]
  role           String   @default("paciente") // Novo campo para diferenciar os níveis de usuário
}

model Medico {
  id             String   @id @default(uuid())
  nome           String
  CRI            String   @unique
  sexo           String
  consultas      Consulta[]
  exames         Exame[]
}

model Consulta {
  id             String   @id @default(uuid())
  idMedico       String
  idPaciente     String
  medico         Medico   @relation(fields: [idMedico], references: [id])
  paciente       Paciente @relation(fields: [idPaciente], references: [id])
}

model Exame {
  id             String   @id @default(uuid())
  idMedico       String
  idPaciente     String
  resultado      String
  medico         Medico   @relation(fields: [idMedico], references: [id])
  paciente       Paciente @relation(fields: [idPaciente], references: [id])
}